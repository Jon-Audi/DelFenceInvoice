
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null; // Authenticated users can read any user profile (e.g., for display names)
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid; // User can create their own profile
      allow update: if request.auth != null && (request.resource.data.uid == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin'); // User can update their own, Admin can update any
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin'; // Only Admins can delete users
    }

    // Company Settings
    match /companySettings/{settingsId} {
      allow read: if request.auth != null; // Authenticated users can read company settings
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin'; // Only Admins can write
    }

    // Products
    match /products/{productId} {
      allow read: if true; // DIAGNOSTIC: Allow all reads
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Customers
    match /customers/{customerId} {
      allow read: if true; // DIAGNOSTIC: Allow all reads
      allow create, update, delete: if request.auth != null;
    }

    // Estimates
    match /estimates/{estimateId} {
      allow read: if true; // DIAGNOSTIC: Allow all reads
      allow create, update, delete: if request.auth != null;
    }

    // Orders
    match /orders/{orderId} {
      allow read: if true; // DIAGNOSTIC: Allow all reads
      allow create, update, delete: if request.auth != null;
    }

    // Invoices
    match /invoices/{invoiceId} {
      allow read, create, update, delete: if request.auth != null; // Invoices page not yet diagnosed, keep stricter for now.
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
