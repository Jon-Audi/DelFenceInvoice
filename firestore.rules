
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: Allow read and write access to any document
    // for any authenticated user.
    // WARNING: This is very permissive. You should restrict this
    // for production applications based on your security needs.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Example: Restrict access to the 'users' collection
